<div class="layout">
    <form id="petitionForm" method="post">
        <h1>
            YOUR VOICE COUNTS!
        </h1>
        <h3>
            Take action by signing this petition to stop plastic pollution and its toxic impacts.
        </h3>
        <label for="signature">Sign here</label>
        <canvas width="500px" height="100px" id="signature"></canvas>
        <input type="hidden" type="text" id="sign" name="signature" />
        {{>error}}
        <div id="buttonContainer">
            <button id="submit">SUBMIT</button>
        </div>
    </form>
    <button id="clear">CLEAR</button>
    {{> logout}}
</div>


<script src="/script.js"></script>